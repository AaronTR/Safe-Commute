<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="safecommute.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_safecommute"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="safecommute.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="safecommute.main.MainActivity$DetailsActivity" />
        <activity android:name="safecommute.bluetooth.BluetoothActivity" 
            	  android:label="@string/bluetooth_activity_name"
            	  android:parentActivityName="safecommute.main.MainActivity" >
            	  <meta-data
            	      android:name="android.support.PARENT_ACTIVITY"
            	      android:value="com.example.safecommute.MainActivity"  
            	   />
          </activity>
    </application>

</manifest>